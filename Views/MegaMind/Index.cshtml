<div class="row clearfix">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
        <div class="card">
            <div class="header">
                <a href="javascript:void(0);" class="btn btn-primary pull-right" onclick="AddEmployee();">Add Employee</a>
               
                <h2>
                    <small>Manage your Employee.</small>
                </h2>
            </div>
            <br />
            <div class="body table-responsive">
                <table class="table table-hover dataTable" id="tblEmp">

                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>PhoneNo</th>
                            <td class="text-center">Action</td>
                        </tr>
                    </thead>
                    <tbody>
                        @for (int x = 0; x < Model.Count; x++)
                        {
                            <tr>
                                <td>@Model[x].Name</td>
                                <td>@Model[x].Email</td>
                                <td>@Model[x].PhoneNo</td>
                                <td class="text-center">
                                    <a href="javascript:void(0);" class="glyphicon glyphicon-edit btn btn-success" onclick="AddEdit(@Model[x].Id);"></a>
                                    <a href="javascript:void(0);" class="glyphicon glyphicon-trash btn btn-danger" onclick="DeleteEmployee(@Model[x].Id);"></a>
                                </td>
                            </tr>
                        }

                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

   